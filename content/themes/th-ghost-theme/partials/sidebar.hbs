    <style type="text/css">
        .sidebyside {
            display: inline-flex;
        }
        
        .projects a {
            margin-bottom: 20px;
            display: block;
        }
        
        .projects a.column {
            max-width: 49%;
            display: inline-block;
            vertical-align: middle;
        }
        
        .projects a:hover {
            -webkit-transform: scale(1.05, 1.05);
            -moz-transform: scale(1.05, 1.05);
