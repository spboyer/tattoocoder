{{! 
	
	POST - COVER
	- Configuration of this file is not required. 

}}

	<div id="cover" class="cover {{post_class}}">
		<div class="background" {{#if image}} style="background-image: url({{image}})" {{/if}}></div>
		<header class="wrapper">
			<h2>
				{{#foreach tags}}
				<a href="{{url}}">{{name}}</a> 
				{{/foreach}}
			</h2>
			<h1>{{{title}}}</h1>
			<span class="meta">
				Posted by {{author}} on <i class="fa fa-clock-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMMM Do, YYYY'}}</time>.
			</span>
		</header>
		<i class="fa fa-chevron-down movedown"></i>
	</div>
